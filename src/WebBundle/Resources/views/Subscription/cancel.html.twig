{% extends "WebBundle::login.html.twig" %}
{% set subtitle =   "Assinaturas"  %}
{% set og_description =  "Assinaturas" %}
{% set og_type =  "null" %}
{% set og_image =  "null" %}
{% set keywords =  "null" %}
{% block body %}

<div class="tab-title">Inscreva-se agora!</div>

<div id="subscribe-plan">
	<div class="subscribe-title" id="selected_pack">
		<span>1</span>
		<h5>{{subscription.pack}}</h5>
		<span class="fas fa-check float-right"></span>
		<span class="float-right price-step-1">{{subscription.price}} {{subscription.currency}}</span>
	</div>
	<div class="subscribe-title" id="selected_pack">
		<span>2</span>
		<h5>Forma de pagamento</h5>
		<span class="fas fa-check float-right"></span>
		{% if subscription.method == "manual" %}
			<span class="float-right price-step-1"><i class='fas fa-money-check-alt'></i> Pagamento por PIX </span>
		{% elseif subscription.method == "card" %}
			<span class="float-right price-step-1"><i class='far fa-credit-card'></i> Cartão de Crédito</span>
		{% elseif subscription.method == "paypal" %}
			<span class="float-right price-step-1"><i class='fab fa-paypal'></i> PayPal</span>
		{% endif %}
	</div>
	<div class="subscribe-title">
		<span>3</span>
		<h5>Pagamento {{subscription.status|capitalize}}</h5>
		<span class="float-right price-step-1"><i class='fas fa-exclamation-circle'></i> Não pago</span>
	</div>

	<span class="paypal-redirect">
			<i class="fas fa-exclamation-circle"></i>
			<p>Pagamento Phe não recebido, por favor, tente novamente ou entre em contato com nossa equipe de suporte,</p>  
	</span>

</div>

{% endblock %}